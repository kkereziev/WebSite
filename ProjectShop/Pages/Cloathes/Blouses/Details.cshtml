@page
@model ProjectShop.Pages.Cloathes.Blouses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Blouse</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blouse.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blouse.Brand)
        </dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Blouse.Models)</dt>
        <dd>
            <table class="table" style="width: 552px; height: 112px;">
                <tr>
                </tr>
                @foreach (var model in Model.Blouse.Models)
                {

                    <tr>
                        <th class="row-sm-2">Model</th>
                        <th class="row-sm-2">Colors</th>
                        <th class="row-sm-2">Sizes</th>
                    </tr>
                    <tr>
                        <td class="row-sm-2">
                            @Html.DisplayFor(modelItem => model.Name)
                        </td>
                        <td>
                            @foreach (var color in model.Colors)
                            {
                                <table>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => color.ColorOfBlouse)
                                        </td>
                                    </tr>
                                </table>

                            }
                        </td>
                        <td>
                            @foreach (var size in model.Size)
                            {
                                <table>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => size.SizeOfBlouse)
                                        </td>
                                    </tr>
                                </table>
                            }
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Blouse.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>