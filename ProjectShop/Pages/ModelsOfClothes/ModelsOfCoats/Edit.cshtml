@page
@model ProjectShop.Pages.ModelsOfClothes.ModelsOfCoats.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Coat Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CoatModel.Id" />
            <div class="form-group">
                <label asp-for="CoatModel.Name" class="control-label"></label>
                <input asp-for="CoatModel.Name" class="form-control" />
                <span asp-validation-for="CoatModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoatModel.Coat.Brand" class="control-label"></label>
                <select asp-for="CoatModel.Coat.Brand" class="form-control" asp-items="ViewBag.CoatId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
